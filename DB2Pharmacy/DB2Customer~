#!/bin/ksh
#DB2 Pharmacy - Customer Script

SELECTION=-1
# Will print infinitely until the user enters 0 to exit the previous Script.
while [ $SELECTION -ne 0 ]
do
	SELECTION=-1
	#Print Customer Menu
	echo "----<CUSTOMER MENU>----"
	echo "1 | Query 1"
	echo "2 | Query 2"
	echo "3 | Query 3"
	echo "4 | Query 4"
	echo "5 | Query 5"
	echo "0 | RETURN TO MAIN MENU"
	echo "----------------------------"
	read -p "Please enter the number corresponding to the selection above: " SELECTION

	#Select and run user queries
	case $SELECTION in
		1)
			#Query 1

			;;
		2)
			#Query 2
			
			;;
		3)
			#Query 3
			
			;;
		4)
			#Query 4

			;;
		5)
			#Query 5

			;;
		0)
			#Return to Main Menu
			SELECTION=0
			;;
		*)
			#If user enters soemthing that is NOT part of the selection
			echo "ERROR: Please ONLY enter the selection numbers."
			echo " "
			SELECTION=-1
			;;
	esac
done
