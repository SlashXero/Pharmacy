#!/bin/bash
#DB2 Pharmacy - Pharmacy

#unzip all nessesary files and delete the zip file
unzip -j -o DB2Pharmacy > /dev/null
rm DB2Pharmacy.zip > /dev/null

#Initialize Database
echo "[INITIALIZING] Setting up DB2 Enviroment..."
. db2init > /dev/null
wait
echo "[INITIALIZING] Connecting to Database..."
echo "[INITIALIZING] DONE."

#Clear log file
rm log.txt > /dev/null
./DB2MainMenu
